@model IEnumerable<PMS.Models.Medicine>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h4>💊 Medicine</h4>
<br/>
<p>This page contains the medicine details related to current inventory.</p>
<hr/>
<br/>
<p>
    @Html.ActionLink("+💊 Add medicine details", "Create","Medicine", null,new{@class="btn btn-info"})
</p>
@if (TempData["Message"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <strong>Alert !</strong> @TempData["Message"].
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
               Medicine Name
            </th>
            <th>
                Manufacture ID
            </th>
            <th>
               Manufacture
            </th>
            <th>
                Unit Price
            </th>
            <th>
                Type
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacture_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    @Html.ActionLink("Edit","Edit","Medicine", new { Id = item.Id},new { @class="btn btn-warning btn-sm"}) |
                    @Html.ActionLink("Delete","Delete","Medicine", new { Id = item.Id},new { @class="btn btn-danger btn-sm " })
            </td>
        </tr>
}
    </tbody>
</table>
