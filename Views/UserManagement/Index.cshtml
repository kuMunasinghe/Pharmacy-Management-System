@model IEnumerable<PMS.Models.Users>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>SUCCESS</strong> @TempData["Message"].
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<h3> 👤⚙️    Users</h3>
<br/>
<p>
    @Html.ActionLink("➕ Create a User", "Create","UserManagement", null,new{@class="btn btn-info"})
</p>
<div style="overflow:scroll;">
<table class="table">
    <thead>
        <tr>
            <th>
               ID
            </th>
            <th>
               First Name
            </th>
            <th>
               Last Name
            </th>
            <th>
              Email
            </th>
            <th>
             Password
            </th>
            <th>
             Mobile No:
            </th>
            <th>
               Address
            </th>
             <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.First_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    ◾◾◾◾◾◾
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                
                @Html.ActionLink("Edit","Edit","UserManagement", new { Id = item.Id},new { @class="btn btn-warning btn-sm"})
                @Html.ActionLink("Delete","Delete","UserManagement", new { Id = item.Id},new { @class="btn btn-danger btn-sm " })
            </td>
        </tr>
}
    </tbody>
</table>
</div>
