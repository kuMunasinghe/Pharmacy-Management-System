@model IEnumerable<PMS.Models.Stock>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h4>📦 Stock</h4>
<br />
<p>This page contains the stock data in PMS.</p>
<hr />
<br />
<p>
    @Html.ActionLink("+📦 New Stock data", "Create","Stock", null,new{@class="btn btn-info"})
</p>
@if (TempData["Message"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <strong>Alert ❗</strong> @TempData["Message"].
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Stock ID
            </th>
            <th>
                Medicine ID
            </th>
            <th>
                Name
            </th>
            <th>
                Quantity
            </th>
            <th>
               Capacity
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicineID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicineName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockStatus)
                </td>
                <td>
                     @Html.ActionLink("Edit","Edit","Stock", new { Id = item.Id},new { @class="btn btn-warning btn-sm"}) |
                @Html.ActionLink("Delete","Delete","Stock", new { Id = item.Id},new { @class="btn btn-danger btn-sm " })
                </td>
            </tr>
        }
    </tbody>
</table>
